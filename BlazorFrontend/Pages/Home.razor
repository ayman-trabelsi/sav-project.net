@page "/"
@inject AuthService AuthService

<PageTitle>Home</PageTitle>

<div class="home-background">
    <div class="hero-section">
        <h1 class="animate__animated animate__fadeInDown">Service Après-Vente</h1>
        <p class="hero-subtitle animate__animated animate__fadeInUp">Votre satisfaction est notre priorité</p>
        <div class="hero-cta animate__animated animate__fadeInUp animate__delay-1s">
            <a href="#services" class="btn btn-primary btn-lg">
                <i class="oi oi-arrow-bottom"></i> Découvrir nos services
            </a>
        </div>
    </div>

    @if (AuthService.Roles?.Contains("Client") == true)
    {
        <div class="sav-container" id="services">
            <div class="sav-info">
                <div class="contact-section">
                    <h3><i class="oi oi-people"></i> Contacter notre service après-vente</h3>
                    <p class="section-description">L'équipe après-vente de Monji est là pour vous aider, vous pouvez nous joindre :</p>
                    <div class="contact-methods">
                        <div class="contact-item animate__animated animate__fadeInLeft">
                            <i class="oi oi-envelope-closed"></i>
                            <a href="mailto:sav@monji.com">sav@monji.com</a>
                        </div>
                        <div class="contact-item animate__animated animate__fadeInLeft animate__delay-1s">
                            <i class="oi oi-phone"></i>
                            <a href="tel:+216197">+216 197</a>
                        </div>
                        <div class="contact-item animate__animated animate__fadeInLeft animate__delay-2s">
                            <i class="oi oi-share"></i>
                            <span>Sur nos réseaux sociaux</span>
                        </div>
                    </div>
                </div>

                <div class="hours animate__animated animate__fadeInUp">
                    <h4><i class="oi oi-clock"></i> Horaires</h4>
                    <p>Notre service après ventes est à votre disposition du lundi au vendredi de 8h30 à 12h et de 13h à 16h30</p>
                </div>

                <div class="claim animate__animated animate__fadeInUp">
                    <h4>Besoin d'assistance ?</h4>
                    <p>Vous avez une réclamation concernant votre produit ?</p>
                    <div class="action-buttons">
                        <a href="/reclamations/create" class="btn btn-primary">
                            <i class="oi oi-plus"></i> Créer une réclamation
                        </a>
                        <a href="/pieces-rechange" class="btn btn-secondary">
                            <i class="oi oi-wrench"></i> Pièces de rechange
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .home-background {
        background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('/images/Partners-Hero-Image-darkened.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        min-height: 100vh;
        position: relative;
        color: #fff;
    }

    .hero-section {
        text-align: center;
        padding: 8rem 1rem;
        position: relative;
        z-index: 2;
    }

    .hero-section h1 {
        font-size: 4.5rem;
        font-weight: 800;
        margin-bottom: 1.5rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        letter-spacing: 1px;
    }

    .hero-subtitle {
        font-size: 1.8rem;
        opacity: 0.95;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
        margin-bottom: 2rem;
    }

    .hero-cta {
        margin-top: 2rem;
    }

    .hero-cta .btn {
        padding: 1rem 2.5rem;
        font-size: 1.2rem;
        border-radius: 50px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
    }

    .hero-cta .btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
    }

    .sav-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
        position: relative;
        z-index: 2;
    }

    .sav-info {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        padding: 3rem;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
        backdrop-filter: blur(10px);
    }

    .contact-section {
        margin-bottom: 3rem;
    }

    .sav-info h3 {
        color: #2c3e50;
        font-size: 2.2rem;
        margin-bottom: 1.5rem;
        border-bottom: 3px solid #3498db;
        padding-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .section-description {
        color: #34495e;
        font-size: 1.3rem;
        line-height: 1.7;
        margin-bottom: 2.5rem;
    }

    .contact-methods {
        display: grid;
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .contact-item {
        display: flex;
        align-items: center;
        gap: 1.2rem;
        padding: 1.2rem;
        background: rgba(52, 152, 219, 0.1);
        border-radius: 12px;
        transition: all 0.3s ease;
        border: 1px solid rgba(52, 152, 219, 0.2);
    }

    .contact-item:hover {
        transform: translateX(10px);
        background: rgba(52, 152, 219, 0.15);
        border-color: rgba(52, 152, 219, 0.3);
    }

    .contact-item i {
        font-size: 1.8rem;
        color: #3498db;
    }

    .contact-item a {
        color: #2c3e50;
        text-decoration: none;
        font-size: 1.2rem;
        transition: color 0.3s ease;
        font-weight: 500;
    }

    .contact-item a:hover {
        color: #3498db;
    }

    .hours {
        background: rgba(52, 152, 219, 0.1);
        border-radius: 16px;
        padding: 2.5rem;
        margin: 2.5rem 0;
        border: 1px solid rgba(52, 152, 219, 0.2);
    }

    .hours h4 {
        color: #2c3e50;
        font-size: 1.6rem;
        margin-bottom: 1.2rem;
        display: flex;
        align-items: center;
        gap: 0.8rem;
    }

    .hours p {
        color: #34495e;
        font-size: 1.2rem;
        line-height: 1.7;
    }

    .claim {
        text-align: center;
        padding: 3rem;
        background: rgba(52, 152, 219, 0.1);
        border-radius: 16px;
        margin-top: 2.5rem;
        border: 1px solid rgba(52, 152, 219, 0.2);
    }

    .claim h4 {
        color: #2c3e50;
        font-size: 1.8rem;
        margin-bottom: 1.2rem;
    }

    .claim p {
        color: #34495e;
        font-size: 1.3rem;
        margin-bottom: 2rem;
    }

    .action-buttons {
        display: flex;
        gap: 1.5rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        gap: 0.8rem;
        padding: 1.2rem 2.5rem;
        font-size: 1.2rem;
        font-weight: 600;
        border-radius: 12px;
        transition: all 0.3s ease;
        text-decoration: none;
    }

    .btn-primary {
        background-color: #3498db;
        color: white;
        border: none;
    }

    .btn-primary:hover {
        background-color: #2980b9;
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(52, 152, 219, 0.3);
    }

    .btn-secondary {
        background-color: #2c3e50;
        color: white;
        border: none;
    }

    .btn-secondary:hover {
        background-color: #34495e;
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(44, 62, 80, 0.3);
    }

    @@media (max-width: 768px) {
        .hero-section {
            padding: 4rem 1rem;
        }

        .hero-section h1 {
            font-size: 2.8rem;
        }

        .hero-subtitle {
            font-size: 1.4rem;
        }

        .sav-container {
            padding: 1rem;
        }

        .sav-info {
            padding: 2rem;
        }

        .sav-info h3 {
            font-size: 1.8rem;
        }

        .section-description {
            font-size: 1.1rem;
        }

        .contact-item {
            padding: 1rem;
        }

        .contact-item i {
            font-size: 1.5rem;
        }

        .contact-item a {
            font-size: 1.1rem;
        }

        .hours {
            padding: 2rem;
        }

        .hours h4 {
            font-size: 1.4rem;
        }

        .hours p {
            font-size: 1.1rem;
        }

        .claim {
            padding: 2rem;
        }

        .claim h4 {
            font-size: 1.6rem;
        }

        .claim p {
            font-size: 1.2rem;
        }

        .action-buttons {
            flex-direction: column;
        }

        .btn {
            width: 100%;
            justify-content: center;
            padding: 1rem 2rem;
            font-size: 1.1rem;
        }
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
