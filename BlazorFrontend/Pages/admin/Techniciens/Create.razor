@page "/admin/techniciens/create"
@using Shared.Models
@inject HttpClient Http
@inject NavigationManager Navigation

<h3>Create Technicien</h3>

<EditForm Model="newTechnicien" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label>Nom</label>
        <InputText class="form-control" @bind-Value="newTechnicien.Nom" />
    </div>
    <div class="mb-3">
        <label>Email</label>
        <InputText class="form-control" @bind-Value="newTechnicien.Email" />
    </div>
    <div class="mb-3">
        <label>Telephone</label>
        <InputText class="form-control" @bind-Value="newTechnicien.Telephone" />
    </div>
    <div class="mb-3">
        <label>Specialite</label>
        <InputText class="form-control" @bind-Value="newTechnicien.Specialite" />
    </div>

    <button class="btn btn-primary" type="submit">Create</button>
    <button class="btn btn-secondary ms-2" type="button" @onclick="Cancel">Cancel</button>
</EditForm>

@code {
    private Technicien newTechnicien = new();
    private bool loading = true;

    void Cancel()
    {
        Navigation.NavigateTo("/admin/techniciens");
    }

    private async Task HandleValidSubmit()
    {
        var response = await Http.PostAsJsonAsync("api/techniciens", newTechnicien);
        if (response.IsSuccessStatusCode)
        {
            Navigation.NavigateTo("/admin/techniciens");
        }
    }
} 